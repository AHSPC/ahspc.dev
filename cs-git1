<body>
    <h1>Copy the command and paste it in your terminal:</h1>

    <label for="username">Username:</label>
    <input type="text" id="username" name="username"><br><br>

    <button onclick="copyText()">Copy Command</button>

    <script>
        function copyText() {
            const username = document.querySelector('#username').value;
            if (username === '') {
                alert('Please enter a username');
                return;
            }
            const text = `git config --global user.name "${username}" \ngit config --global user.email "${username}@ahs.local"`;

            navigator.clipboard.writeText(text)

            const button = document.querySelector('button');
            button.innerText = 'Copied!';

            setTimeout(() => {
                button.innerText = 'Copy Command';
            }, 3000);
        }
    </script>

</body>

